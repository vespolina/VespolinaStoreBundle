{% extends "VespolinaStoreBundle::layout.html.twig" %}

{% block navigation %}
<ul class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Home</a> <span class="divider">/</span></li>
    <li>Checkout<span class="divider">/</span></li>
</ul>
{% endblock %}

{% block content %}

{% render "VespolinaStoreBundle:Process:processNavigator" with {'currentProcessStep': currentProcessStep } %}

<div class="row-fluid">
    <div class="span6">
        <h3>I am already a customer</h3>
        <a class="btn btn-primary" href="{{ path('vespolina_store_cart_checkout') }}">Login</a>

    </div>
    <div class="span6">
        <h3>I'm not yet a customer</h3>

        <p>Full out this form below</p>

        <form action="{{ path('vespolina_store_checkout_create_customer', { 'processId': currentProcessStep.process.id })}}" method="post" {{ form_enctype(createCustomerForm) }}>
        {{ form_widget(createCustomerForm) }}
            <input type="submit" class="btn" />
        </form>

    </div>
</div>
<div class="row-fluid">
</div>
{% endblock %}

