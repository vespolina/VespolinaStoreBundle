{% extends "VespolinaStoreBundle::layout.html.twig" %}

{% block navigation %}
<ul class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Home</a> <span class="divider">/</span></li>
    <li>Checkout<span class="divider">/</span></li>
</ul>
{% endblock %}

{% block content %}

{% render "VespolinaStoreBundle:Process:processNavigator" with {'currentProcessStep': currentProcessStep } %}

<div class="row-fluid">
    <div class="span6">
        <h3>I am already a customer</h3>

        <form name="login" action="{{ path('vespolina_store_checkout_process_step', { 'processId': currentProcessStep.process.id, 'processStepName': currentProcessStep.name })}}" method="post" {{ form_enctype(customerLoginForm) }}>
            {% include "VespolinaStoreBundle:Process:Form/loginCustomer.html.twig" with { 'form': customerLoginForm } %}

            <input type="submit" id="_submit" name="_submit" class="btn" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
        </form>
    </div>

    <div class="span6">
        <h3>I'm not yet a customer</h3>

        <p>Full out this form below</p>

        <form action="{{ path('vespolina_store_checkout_process_step', { 'processId': currentProcessStep.process.id, 'processStepName': currentProcessStep.name })}}" method="post" {{ form_enctype(customerCreateForm) }}>
        	{% include "VespolinaStoreBundle:Process:Form/quickCustomer.html.twig" with { 'form': customerCreateForm } %}
            <input type="submit" class="btn" />
        </form>

    </div>
</div>
<div class="row-fluid">
</div>
{% endblock %}

