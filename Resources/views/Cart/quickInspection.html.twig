<div class="v-cart-quick-inspection">
    {% if not cart.isEmpty %}

        <b>{{ totalPrice | price_format() }}</b> -
        <b>{{ cart.items.count }}</b> item(s)
    <a class="btn btn-success" href="{{ path('vespolina_cart_show') }}">
        Show Cart
    </a>
    <a class="" href="{{ path('vespolina_store_cart_checkout') }}">
        Checkout
    </a>

    {% else %}
    {% endif %}

</div>
